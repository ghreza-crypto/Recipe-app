<%= stylesheet_link_tag '_form' %>
<%= stylesheet_link_tag 'recipemain' %>
<%= form_with(model: recipe, class: 'form') do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'input' %>
  </div>
  <div class="form-group">
    <%= form.label :preparation_time, style: "display: block" %>
    <%= form.text_field :preparation_time, class: 'input' %>
  </div>
  <div class="form-group">
    <%= form.label :cooking_time, style: "display: block" %>
    <%= form.text_field :cooking_time, class: 'input' %>
  </div>
  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: 'input' %>
  </div>
  <div class="form-group">
    <%= form.label :public, style: "display: block" %>
    <%= form.check_box :public %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>