            <li><%= link_to "Home", root_path, class: 'home-link' %></li>
            <div class='nav-links'>
                <li><%= link_to "Food", foods_path, class: 'home-link' %></li>
                <li><%= link_to "Recipes", recipes_path, class: 'home-link' %></li>
                <li><%= link_to "Public Recipes", public_recipes_path, class: 'home-link' %></li>
                <li><%= link_to "Shopping List", shopping_lists_path, class: 'home-link' %></li>
            </div>
            <li> <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: 'sign-out-button' %></li>
        <% else %>
            <div class='services' >
                <li> <%= link_to "Login", new_user_session_path %></li>
                |
                <li> <%= link_to "Register", new_user_registration_path %></li>
