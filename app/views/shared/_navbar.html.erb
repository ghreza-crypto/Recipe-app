<%= stylesheet_link_tag 'navbar' %>
<header class='header'>
    <nav class='navbar'>
        <% if user_signed_in? && request.path == '/' %>
            <li> Welcome <span><%= current_user.name.capitalize %>!</span></li>
            <div class='nav-links'>
                <li><%= link_to "Food", foods_path, class: 'home-link' %></li>
                <li><%= link_to "Recipes", recipes_path, class: 'home-link' %></li>
                <li><%= link_to "Public Recipes", public_recipes_path, class: 'home-link' %></li>
